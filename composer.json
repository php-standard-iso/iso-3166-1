{
  "name": "php-standard-iso/iso-3166-1",
  "type": "library",
  "description": "Standard ISO 3166-1 transposed to PHP",
  "license": "BSD-3-Clause",
  "keywords": [
    "iso",
    "international standard organisation",
    "standard",
    "iso3166-1",
    "country code"
  ],
  "homepage": "https://github.com/php-standard-iso/iso-3166-1",
  "support": {
    "email": "github-support@swarmtech.fr"
  },
  "config": {
    "process-timeout": 600,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "authors": [
    {
      "name": "gary gitton",
      "homepage": "http://www.github.com/garygitton"
    }
  ],
  "autoload": {
    "psr-4": {
      "Iso3166\\Part1\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Iso3166Test\\Part1\\": "test/"
    }
  },
  "require": {
    "php": "^7.0 || ~8.0.0 || ~8.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "vimeo/psalm": "*",
    "squizlabs/php_codesniffer": "*"
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "static-analysis": "psalm --shepherd --stats"
  }
}
